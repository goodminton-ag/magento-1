/** @var \Payone_Core_Block_Paydirekt_Express_Review_Shipping $this */
?>
<div class="box">
    <div class="box-title">
        <h3><?php echo $this->__('Shipping Address') ?></h3>
    </div>
    <div class="box-content">
        <table>
            <tr>
                <td class="table-label"><b><?php echo $this->__("Name :") ?></b></td>
                <td class="table-value">
                    <span><?php echo $this->getFirstname(); ?></span>&nbsp;
                    <span><?php echo $this->getLastname(); ?></span>
                </td>
            </tr>
            <?php if (!empty($this->getPhone())) { ?>
                <tr>
                    <td class="table-label"><b><?php echo $this->__("Phone :") ?></b></td>
                    <td class="table-value"><?php echo $this->getPhone(); ?></td>
                </tr>
            <?php } ?>
            <tr>
                <td class="table-label"><b><?php echo $this->__("Address :") ?></b></td>
                <td class="table-value">
                    <p><?php echo $this->getStreet(); ?></p>
                    <p>
                        <span><?php echo $this->getZip(); ?></span>&nbsp;
                        <span><?php echo $this->getCity(); ?></span>&nbsp;
                        <?php if (!empty($this->getState())) { ?>
                            <span>(<?php echo $this->getState(); ?>)</span>&nbsp;
                        <?php } ?>
                        <span><?php echo $this->getCountry(); ?></span>
                    </p>
                </td>
            </tr>
        </table>
    </div>
</div>